<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#282828"
    android:paddingBottom="2dp">

    <RelativeLayout
        android:id="@+id/lect1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"

        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_pro_one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/base_four_img"
            app:riv_border_color="@color/white"
            app:riv_border_width="3dp"
            app:riv_corner_radius="6dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_pro_one">

            <TextView
                android:id="@+id/tv_proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Loco Personal(20 cm)"
                android:textColor="#fff"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_subsubcombo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_proname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Combo"
                android:textColor="#fff"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subsubcombo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="$"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subsubcombo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_3"
                android:text="8.89 "
                android:textColor="#fff"
                android:textSize="17sp" />

            <ToggleButton
                android:id="@+id/toggle_sub_active"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:background="@drawable/onofftoggel"
                android:checked="true"
                android:textOff=""
                android:textOn="" />


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lect1"
        android:layout_marginTop="3dp"
        android:background="#fff" />

</RelativeLayout>