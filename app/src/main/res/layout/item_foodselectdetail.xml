<RelativeLayout android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#282828"
    android:id="@+id/lect1"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_fooddes"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizza_pic"
        app:riv_border_color="@color/white"
        app:riv_border_width="3dp"
        app:riv_corner_radius="6dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/img_fooddes">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_subprodname"
            android:layout_marginTop="10dp"
            android:text="All Pizza"
            android:textColor="#fff"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_subprodname"
            android:id="@+id/tv_subproduct"
            android:text="Thanks giving dinner"
            android:textColor="#fff"
            android:textSize="17sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_subproduct"
            android:id="@+id/tv_nonvegfood"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_subproduct"
            android:id="@+id/tv_food"
            android:layout_toRightOf="@+id/tv_nonvegfood"
            android:text="Food"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/rel_proprice"
            android:background="@drawable/rounded_rec_black"
            android:layout_below="@+id/tv_food"
            android:layout_margin="5dp"
            android:elevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="#fff"
               android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_dollarsign"
                android:textSize="7pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="555"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/tv_dollarsign"
                android:layout_centerVertical="true"
                android:id="@+id/subfoodprice"
                android:layout_marginLeft="10dp"
                android:textSize="7pt"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_rec_black"
            android:layout_below="@+id/tv_food"
            android:layout_toRightOf="@+id/rel_proprice"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:elevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add cart"
                android:textColor="#fff"
               android:layout_centerInParent="true"
                android:id="@+id/tv_addtocart"
                android:textSize="7pt"
                />

        </RelativeLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_orange"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            />



    </RelativeLayout>

</RelativeLayout>