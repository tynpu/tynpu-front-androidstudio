<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:background="@drawable/cart_bg">

        <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_cartproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Veg Thai Food"
                android:textColor="#000000"
                android:textSize="8pt" />


            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/delete_icon"

                />


            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_delete"
                android:src="@drawable/plus_icon"

                />


            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_plus"
                android:src="@drawable/edit_icon"

                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel_head"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_cart_item"
                android:layout_width="match_parent"
                android:layout_below="@+id/rel_main"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/rel_total"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:text="$/420"
                android:textColor="#000"
                android:textSize="8pt"
                />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>