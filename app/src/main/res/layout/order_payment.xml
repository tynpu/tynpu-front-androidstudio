<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/hearderlay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">


            <RelativeLayout
                android:id="@+id/back_screen"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_todays_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="55dp"
                android:layout_toRightOf="@+id/back_screen"
                android:text="Payment"
                android:textColor="#ffffff"
                android:textSize="9pt" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hearderlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rel_tv_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Payment Method"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b7b7b7" />

                <RelativeLayout
                    android:id="@+id/rel_paypal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/paypal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Creadit Card"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="7pt"
                        android:layout_above="@+id/tv_paypal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="13dp" />

                    <ImageView
                        android:id="@+id/img_paypal"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/creditcardlogos" />


                    <TextView
                        android:id="@+id/tv_paypal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_paypal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Standard Shipping in Buisness Days 1-4 "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#454545"
                        android:textSize="8pt" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#b7b7b7"

                    />

                <RelativeLayout
                    android:id="@+id/rel_cod"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/View3"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Paypal"
                        android:textSize="7pt"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />

                    <ImageView
                        android:id="@+id/img_cod"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/paypal_icon"/>

                    <TextView
                        android:id="@+id/tv_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_cod"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Standard Shipping in Buisness Days 1-4 "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#454545"
                        android:textSize="8pt"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#b7b7b7"/>

                <Button
                    android:id="@+id/continuepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#282828"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="8pt" />

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>