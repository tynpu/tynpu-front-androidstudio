<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rel_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#0089c4">

                <RelativeLayout
                    android:id="@+id/rel_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/back" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Change Password"
                    android:textColor="#ffff"
                    android:textSize="9pt"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_logo"
                android:layout_width="match_parent"

                android:layout_height="100dp"
                android:layout_below="@+id/rel_header"
                android:layout_marginTop="30dp"

                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_tv_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_logo"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Create New Password"
                    android:textColor="#fff"
                    android:textSize="7pt"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_tv_foget"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/rel_tv_login"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/border_black_filed"
                    android:textColorHint="#f2ecec">

                    <EditText
                        android:id="@+id/et_otp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter OTP"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#f2ecec"
                        android:textCursorDrawable="@null"
                        android:textSize="8pt" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_email"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/rel_tv_foget"
                android:layout_marginTop="10dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/border_black_filed"
                    android:layout_marginRight="40dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#f2ecec">

                    <EditText
                        android:id="@+id/createpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Create New Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:background="@android:color/transparent"
                        android:textColorHint="#f2ecec"
                        android:textCursorDrawable="@null"
                        android:textSize="8pt" />
                </android.support.design.widget.TextInputLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_conform"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/rel_email"
                android:layout_marginTop="10dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/border_black_filed"
                    android:textColor="#ffffff"
                    android:textColorHint="#f2ecec">

                    <EditText
                        android:id="@+id/et_conformpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textColorHint="#f2ecec"
                        android:textCursorDrawable="@null"
                        android:textSize="8pt" />
                </android.support.design.widget.TextInputLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel_conform"
                android:layout_marginTop="40dp"

                >

                <Button
                    android:id="@+id/btn_user_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/login_filed"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="7pt" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_user_back"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_login"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=" Back"
                    android:textColor="#fff"
                    android:textSize="7pt"

                    />


            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressBarchangepassword"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                >
            </ProgressBar>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>